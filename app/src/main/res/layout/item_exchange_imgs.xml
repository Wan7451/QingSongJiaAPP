<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/space70"
    android:layout_height="@dimen/space70"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="@dimen/space60"
        android:layout_height="@dimen/space60"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/icon_exchange_gallery"
        fresco:roundedCornerRadius="5dp" />


    <ImageView
        android:id="@+id/delete"
        android:layout_gravity="right|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/input_deldte"/>
</FrameLayout>