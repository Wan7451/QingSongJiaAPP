<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.qingsongjia.qingsongjia.user.MyTeacherActivity">


    <View style="@style/divider1" />

    <View style="@style/divider10" />

    <View style="@style/divider1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请码"
            android:textColor="@color/text_default" />

        <TextView
            android:id="@+id/myMessage_yqm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="@dimen/space10"
            android:text="1234"
            android:textColor="@color/text_default_hint" />

    </LinearLayout>

    <View style="@style/divider1" />

    <LinearLayout
        android:id="@+id/myMessage_yhj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠劵"
            android:textColor="@color/text_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space10"
            android:id="@+id/myMessage_yhj_Left"
            android:textColor="@color/text_default_hint" />


        <TextView
            android:id="@+id/myMessage_yhj_Right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="3张"
            android:textColor="@color/text_default_hint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-90"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space10"
            android:src="@drawable/icon_arrow_gray"/>
    </LinearLayout>

    <View style="@style/divider1" />

    <LinearLayout
        android:id="@+id/myMessage_jf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分&#160;&#160;&#160;&#160;"
            android:textColor="@color/text_default" />

        <TextView
            android:id="@+id/myMessage_jf_Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space10"
            android:textColor="@color/text_default_hint" />


        <TextView
            android:id="@+id/myMessage_jf_Right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="10分"
            android:textColor="@color/text_default_hint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-90"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space10"
            android:src="@drawable/icon_arrow_gray"/>
    </LinearLayout>

    <View style="@style/divider1" />

    <LinearLayout
        android:id="@+id/myMessage_yue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_margin">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额&#160;&#160;&#160;&#160;"
            android:textColor="@color/text_default" />

        <TextView
            android:id="@+id/myMessage_yue_Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space10"
            android:textColor="@color/text_default_hint" />


        <TextView
            android:id="@+id/myMessage_yue_Right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0元"
            android:textColor="@color/text_default_hint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-90"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space10"
            android:src="@drawable/icon_arrow_gray"/>
    </LinearLayout>



    <View style="@style/divider1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg"/>

</LinearLayout>
